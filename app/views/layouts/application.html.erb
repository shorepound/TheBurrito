<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "The Burrito" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="The Burrito">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="apple-touch-icon" href="/icon.png">

    <!-- Bootstrap CSS (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render 'shared/header' %>

    <div class="container mt-4">
      <div data-controller="flash" data-flash-timeout-value="5000">
        <% if flash[:notice] %>
          <div class="alert alert-success" role="alert"><%= flash[:notice] %></div>
        <% end %>
        <% if flash[:alert] %>
          <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
        <% end %>
      </div>

      <%= yield %>
    </div>

    <%= render 'shared/footer' %>
    <!-- Bootstrap JS (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      (function(){
        function initDropdowns(root){
          try{
            if(!window.bootstrap || !window.bootstrap.Dropdown) return;
            var scope = root || document;
            var toggles = scope.querySelectorAll('.dropdown-toggle');
            toggles.forEach(function(el){
              window.bootstrap.Dropdown.getOrCreateInstance(el);
            });
          }catch(e){ console.error('Bootstrap dropdown init error', e); }
        }

        document.addEventListener('DOMContentLoaded', function(){ initDropdowns(document); });
        document.addEventListener('turbo:load', function(){ initDropdowns(document); });
        document.addEventListener('turbo:frame-load', function(e){ initDropdowns(e.target); });

        // MutationObserver fallback for dynamically inserted dropdowns
        try{
          var observer = new MutationObserver(function(mutations){
            mutations.forEach(function(m){
              m.addedNodes.forEach(function(node){
                if(node.nodeType !== 1) return;
                if(node.matches && node.matches('.dropdown-toggle')){
                  initDropdowns(node);
                } else {
                  initDropdowns(node);
                }
              });
            });
          });
          observer.observe(document.documentElement || document.body, { childList: true, subtree: true });
        }catch(e){ /* ignore */ }
      })();
    </script>
  </body>
</html>

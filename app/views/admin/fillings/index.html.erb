<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">Fillings</h1>
  <%= link_to "New Filling", new_admin_filling_path, class: "btn btn-primary" %>
</div>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @fillings.each do |f| %>
      <tr>
        <td><%= link_to f.name, admin_filling_path(f) %></td>
        <td>
          <%= link_to "Edit", edit_admin_filling_path(f), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to "Delete", admin_filling_path(f), method: :delete, data: { confirm: "Delete?" }, class: "btn btn-sm btn-danger ms-1" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

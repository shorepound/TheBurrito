<%= render 'shared/index_header', title: 'Tortillas', new_path: new_admin_tortilla_path %>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tortillas.each do |t| %>
      <tr>
        <td><%= link_to t.name, admin_tortilla_path(t) %></td>
        <%= render 'shared/action_buttons', edit_path: edit_admin_tortilla_path(t), delete_path: admin_tortilla_path(t) %>
      </tr>
    <% end %>
  </tbody>
</table>

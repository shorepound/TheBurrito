<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">Tortillas</h1>
  <%= link_to "New Tortilla", new_admin_tortilla_path, class: "btn btn-primary" %>
</div>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tortillas.each do |t| %>
      <tr>
        <td><%= link_to t.name, admin_tortilla_path(t) %></td>
        <td>
          <%= link_to "Edit", edit_admin_tortilla_path(t), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to "Delete", admin_tortilla_path(t), method: :delete, data: { confirm: "Delete?" }, class: "btn btn-sm btn-danger ms-1" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

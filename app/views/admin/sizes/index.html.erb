<%= render 'shared/index_header', title: 'Sizes', new_path: new_admin_size_path %>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @sizes.each do |s| %>
      <tr>
        <td><%= link_to s.name, admin_size_path(s) %></td>
        <%= render 'shared/action_buttons', edit_path: edit_admin_size_path(s), delete_path: admin_size_path(s) %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 mb-0">Sizes</h1>
  <%= link_to "New Size", new_admin_size_path, class: "btn btn-primary" %>
</div>

<table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @sizes.each do |s| %>
      <tr>
        <td><%= s.name %></td>
        <td>
          <%= link_to "Edit", edit_admin_size_path(s), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to "Delete", admin_size_path(s), method: :delete, data: { confirm: "Delete?" }, class: "btn btn-sm btn-danger ms-1" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

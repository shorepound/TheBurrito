<div class="card-taqueria mb-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h4 mb-0">Toppings</h1>
    <%= link_to "New Topping", new_admin_topping_path, class: "btn btn-primary" %>
  </div>

  <table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @toppings.each do |t| %>
      <tr>
        <td><%= link_to t.name, admin_topping_path(t) %></td>
        <td class="btn-column">
          <%= link_to "Edit", edit_admin_topping_path(t), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to "Delete", admin_topping_path(t), method: :delete, data: { confirm: "Delete?" }, class: "btn btn-sm btn-danger ms-1" %>
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>

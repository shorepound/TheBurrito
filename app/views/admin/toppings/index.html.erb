<%= card_taqueria('mb-4') do %>
  <%= render 'shared/index_header', title: 'Toppings', new_path: new_admin_topping_path %>

  <table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @toppings.each do |t| %>
      <tr>
        <td><%= link_to t.name, admin_topping_path(t) %></td>
        <%= render 'shared/action_buttons', edit_path: edit_admin_topping_path(t), delete_path: admin_topping_path(t) %>
      </tr>
    <% end %>
  </tbody>
  </table>
<% end %>

<%= card_taqueria('mb-4') do %>
  <%= render 'shared/index_header', title: 'Users', new_path: new_admin_user_path %>

  <table class="table table-hover">
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Admin</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><%= link_to u.email, admin_user_path(u) %></td>
        <td><%= [u.first_name, u.last_name].compact.join(" ") %></td>
        <td><%= u.is_admin.to_i > 0 ? "Yes" : "No" %></td>
        <%= render 'shared/action_buttons', edit_path: edit_admin_user_path(u), delete_path: admin_user_path(u), delete_confirm: 'Delete user?' %>
      </tr>
    <% end %>
  </tbody>
  </table>
<% end %>

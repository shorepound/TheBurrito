<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">Burritos</h1>
  <%= link_to "Create Burrito", new_burrito_path, class: "btn btn-primary" %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Tortilla</th>
      <th>Size</th>
      <th>Fillings</th>
      <th>Toppings</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @burritos.each do |b| %>
      <tr>
        <td><%= link_to b.name || "Burrito ##{b.id}", burrito_path(b) %></td>
        <td><%= b.user.email %></td>
        <td><%= b.tortilla.name %></td>
        <td><%= b.size.name %></td>
        <td><%= b.fillings.map(&:name).join(", ") %></td>
        <td><%= b.toppings.map(&:name).join(", ") %></td>
        <td>
          <% if b.user == current_user || admin_user? %>
            <%= link_to "Edit", edit_burrito_path(b), class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to "Delete", burrito_path(b), method: :delete, data: { confirm: "Delete?" }, class: "btn btn-sm btn-danger ms-1" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
